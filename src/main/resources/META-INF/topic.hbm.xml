<hibernate-mapping>
    <class name="service.Topic" table="topics" catalog="mkyong">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="header" type="string">
            <column name="header" length="256" not-null="true" />
        </property>
        <property name="content">
            <column name="content" length="50000" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>