<hibernate-mapping>
    <class name="common.service.Topic" table="topics">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="header" type="string">
            <column name="header" length="256" not-null="true" />
        </property>
        <property name="content" type="string">
            <column name="content" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>